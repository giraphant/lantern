# 资金费率套利策略配置示例
# 复制此文件为 .env 并填入实际值

# ========== 交易所API配置（必需） ==========
GRVT_API_KEY=your_grvt_api_key
GRVT_PRIVATE_KEY=your_grvt_private_key_path_or_content
GRVT_TRADING_ACCOUNT_ID=your_trading_account_id
GRVT_ENVIRONMENT=prod

LIGHTER_PRIVATE_KEY=your_lighter_private_key_hex
LIGHTER_ACCOUNT_INDEX=0
LIGHTER_API_KEY_INDEX=0

# ========== 交易参数 ==========
TRADING_SYMBOL=BTC
TRADING_SIZE=0.1

# ========== 资金费率特定配置 ==========
# 建仓阈值：年化费率差大于此值时建仓（如0.05 = 5% APR）
FUNDING_BUILD_THRESHOLD_APR=0.05

# 平仓阈值：年化费率差小于此值时平仓（如0.02 = 2% APR）
FUNDING_CLOSE_THRESHOLD_APR=0.02

# 最大仓位
MAX_POSITION=10

# 检查间隔（秒）：每隔多久检查一次费率
FUNDING_CHECK_INTERVAL=300

# ========== Pushover推送通知（可选） ==========
PUSHOVER_USER_KEY=your_pushover_user_key
PUSHOVER_API_TOKEN=your_pushover_app_token

# ========== Telegram Bot（可选，推荐） ==========
# 1. 通过 @BotFather 创建bot获取token
# 2. 通过 @userinfobot 获取你的chat_id
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
